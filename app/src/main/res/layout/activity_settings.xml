<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="SettingsActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/settingButtonBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Назад"/>

        <Button
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:id="@+id/settingButtonSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Сохранить"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.SwitchCompat
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingVertical="8dp"
            android:id="@+id/settingSwitch1"
            android:theme="@style/MySwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Показывать Понедельник"
            android:textOff="Off"
            android:textOn="On"
            android:textSize="24sp"
            app:showText="true" />
        <androidx.appcompat.widget.SwitchCompat
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingVertical="8dp"
            android:id="@+id/settingSwitch2"
            android:theme="@style/MySwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Показывать Вторник"
            android:textOff="Off"
            android:textOn="On"
            android:textSize="24sp"
            app:showText="true" />
        <androidx.appcompat.widget.SwitchCompat
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingVertical="8dp"
            android:id="@+id/settingSwitch3"
            android:theme="@style/MySwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Показывать Среду"
            android:textOff="Off"
            android:textOn="On"
            android:textSize="24sp"
            app:showText="true" />
        <androidx.appcompat.widget.SwitchCompat
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingVertical="8dp"
            android:id="@+id/settingSwitch4"
            android:theme="@style/MySwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Показывать Четверг"
            android:textOff="Off"
            android:textOn="On"
            android:textSize="24sp"
            app:showText="true" />
        <androidx.appcompat.widget.SwitchCompat
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingVertical="8dp"
            android:id="@+id/settingSwitch5"
            android:theme="@style/MySwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Показывать Пятницу"
            android:textOff="Off"
            android:textOn="On"
            android:textSize="24sp"
            app:showText="true" />
        <androidx.appcompat.widget.SwitchCompat
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingVertical="8dp"
            android:id="@+id/settingSwitch6"
            android:theme="@style/MySwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Показывать Субботу"
            android:textOff="Off"
            android:textOn="On"
            android:textSize="24sp"
            app:showText="true" />


    </LinearLayout>


</LinearLayout>